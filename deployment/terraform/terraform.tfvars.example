# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Database Configuration
db_instance_class       = "db.t4g.small"
db_name                 = "nirvahatech"
db_username             = "dbadmin"
db_password             = "CHANGE_ME_SECURE_PASSWORD"
backup_retention_period = 7
multi_az_enabled        = true

# ECS Configuration
backend_image         = "YOUR_AWS_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/nirvahatech-backend:latest"
backend_cpu           = 512
backend_memory        = 1024
backend_desired_count = 2

# SSL Certificate (create in ACM first)
certificate_arn = "arn:aws:acm:us-east-1:YOUR_ACCOUNT:certificate/YOUR_CERT_ID"

# GitHub Configuration (for Amplify)
github_repository   = "https://github.com/YOUR_ORG/nirvahatech"
github_access_token = "ghp_YOUR_TOKEN_HERE"

# Monitoring
alarm_email = "alerts@nirvahatech.com"

